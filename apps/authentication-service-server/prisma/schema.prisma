datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  email     String?  @unique
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     Json
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Role {
  createdAt   DateTime     @default(now())
  id          String       @id @default(cuid())
  name        String?
  roleName    String?
  systemUsers SystemUser[]
  updatedAt   DateTime     @updatedAt
}

model SystemUser {
  createdAt DateTime @default(now())
  email     String?
  id        String   @id @default(cuid())
  role      Role?    @relation(fields: [roleId], references: [id])
  roleId    String?
  updatedAt DateTime @updatedAt
}
